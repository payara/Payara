<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>org.glassfish.main.distributions</groupId>
        <artifactId>distributions</artifactId>
        <version>4.2-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>appclient</artifactId>
    <name>Glassfish Remote App Client Bundle</name>
    <description>This module assembles the Glassfish Remote App Client Bundle</description>
    <packaging>pom</packaging>

    <properties>
        <sun.acc.xml.include>**/domains/domain1/config/sun-acc.xml</sun.acc.xml.include>
        <lib.appclient.include>**/lib/appclient/**</lib.appclient.include>
    </properties>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>2.2-beta-3</version>
                <executions>
                    <execution>
                        <id>assemble-client-distribution</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>

                            <!-- Note: the bundle name "appclient" - from the 
                                 descriptor file name - is appended to the
                                 finalName value to get the real final file -->
                            <finalName>glassfish</finalName>

                            <descriptors>
                                <descriptor>src/main/assembly/appclient.xml</descriptor>
                            </descriptors>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>

                    <!--
                        This execution extracts the contents of the lib/appclient
                        directory and the sun-acc.xml file from the
                        glassfish.zip distribution so we can
                        package those files in this distribution also.
                    -->
                    <execution>
                        <id>extract-lib-appclient</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                  <groupId>org.glassfish.main.distributions</groupId>
                                  <artifactId>glassfish</artifactId>
                                  <version>${project.version}</version>
                                  <type>zip</type>
                                  <includes>${sun.acc.xml.include},${lib.appclient.include}</includes>
                                </artifactItem>
                              </artifactItems>
                        </configuration>
                    </execution>

                    <!--
                        This execution extracts the appclient script files from
                        the distribution fragment so we can include them in this
                        distribution.  Normally we would just use the assembly
                        plug-in config to do this using a dependencySet, except
                        that the fileMode handling (which sets permissions)
                        does not work correctly in a dependencySet although it
                        does in a fileSet.
                    -->
                    <execution>
                        <id>extract-appclient-scripts</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                  <groupId>org.glassfish.main.appclient</groupId>
                                  <artifactId>appclient-scripts</artifactId>
                                  <version>${project.version}</version>
                                  <type>distribution-fragment</type>
                                  <includes>glassfish/bin/*</includes>
                                </artifactItem>
                              </artifactItems>
                        </configuration>
                    </execution>

                </executions>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>org.glassfish.main.appclient</groupId>
            <artifactId>gf-client</artifactId>
            <version>${project.version}</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>org.glassfish.main.appclient</groupId>
            <artifactId>appclient-scripts</artifactId>
            <version>${project.version}</version>
            <type>distribution-fragment</type>
        </dependency>
    </dependencies>
</project>

