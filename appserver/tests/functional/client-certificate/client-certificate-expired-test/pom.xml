<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <groupId>fish.payara.samples</groupId>
        <artifactId>client-certificate</artifactId>
        <version>7.2026.1-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <packaging>war</packaging>
    <artifactId>client-certificate-expirated-test</artifactId>
    <name>Payara-Samples - Client Certificate Expiration Validation Test</name>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <executions>
                    <!-- Generate an expired self-signed certificate -->
                    <execution>
                        <id>generate-expired-certificate</id>
                        <phase>pre-integration-test</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <skip>${skipConfig}</skip>
                            <executable>keytool</executable>
                            <arguments>
                                <argument>-genkeypair</argument>
                                <argument>-alias</argument>
                                <argument>client-expired</argument>
                                <argument>-keyalg</argument>
                                <argument>RSA</argument>
                                <argument>-keysize</argument>
                                <argument>2048</argument>
                                <argument>-sigalg</argument>
                                <argument>SHA256withRSA</argument>
                                <argument>-dname</argument>
                                <argument>CN=ExpiredClient</argument>
                                <argument>-validity</argument>
                                <argument>1</argument>
                                <argument>-keystore</argument>
                                <argument>${project.build.directory}${file.separator}expired-keystore.p12</argument>
                                <argument>-storetype</argument>
                                <argument>PKCS12</argument>
                                <argument>-storepass</argument>
                                <argument>changeit</argument>
                                <argument>-keypass</argument>
                                <argument>changeit</argument>
                                <argument>-startdate</argument>
                                <argument>2019/08/01</argument>
                                <argument>-noprompt</argument>
                            </arguments>
                        </configuration>
                    </execution>

                    <!-- Add expired certificate to Server trust store -->
                    <execution>
                        <id>add-expired-certificate-to-server</id>
                        <phase>pre-integration-test</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <skip>${skipConfig}</skip>
                            <executable>keytool</executable>
                            <arguments>
                                <argument>-importkeystore</argument>
                                <argument>-srckeystore</argument>
                                <argument>${project.build.directory}${file.separator}expired-keystore.p12</argument>
                                <argument>-srcstoretype</argument>
                                <argument>PKCS12</argument>
                                <argument>-destkeystore</argument>
                                <argument>${payara.home}${file.separator}glassfish${file.separator}domains${file.separator}${payara.domain.name}${file.separator}config${file.separator}cacerts.p12</argument>
                                <argument>-deststoretype</argument>
                                <argument>PKCS12</argument>
                                <argument>-srcstorepass</argument>
                                <argument>changeit</argument>
                                <argument>-deststorepass</argument>
                                <argument>changeit</argument>
                                <argument>-noprompt</argument>
                            </arguments>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>payara-server-remote</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <executions>
                            <!-- Disable Certificate Expiration Validation -->
                            <execution>
                                <id>disable-expiration-validation</id>
                                <phase>pre-integration-test</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <skip>${skipConfig}</skip>
                                    <executable>${payara.asadmin}</executable>
                                    <arguments>
                                        <argument>set</argument>
                                        <argument>configs.config.server-config.security-service.auth-realm.certificate.property.certificate-validation=false</argument>
                                    </arguments>
                                </configuration>
                            </execution>

                            <!-- Start Domain to apply configuration -->
                            <execution>
                                <id>restart-payara-for-config</id>
                                <phase>pre-integration-test</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <skip>${skipConfig}</skip>
                                    <executable>${payara.asadmin}</executable>
                                    <arguments>
                                        <argument>${serverRestartCommand}</argument>
                                        <argument>${payara.domain.name}</argument>
                                    </arguments>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
