<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
  <persistence-unit name="pu-fish-6568-test" transaction-type="JTA">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="jakarta.persistence.jdbc.url"
                value="jdbc:oracle:thin:::xe"/>
      <property name="jakarta.persistence.jdbc.driver"
                value="org.testcontainers.jdbc.ContainerDatabaseDriver"/>
      <property name="jakarta.persistence.jdbc.user" value="payara"/>
      <property name="jakarta.persistence.jdbc.password" value="payara"/>
      <property name="jakarta.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>