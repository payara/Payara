<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <artifactId>payara-samples-profiled-tests</artifactId>
        <groupId>fish.payara.samples</groupId>
        <version>7.2025.2-SNAPSHOT</version>
    </parent>

    <artifactId>ejb-invoker-secure-endpoint</artifactId>
    <packaging>war</packaging>
    <name>Payara Samples - Payara - ejb-invoker Secure Endpoint</name>

    <properties>
        <payara.asadmin>${payara.home}${file.separator}glassfish${file.separator}bin${file.separator}asadmin${script.extension}</payara.asadmin>
    </properties>

    <dependencies>
        <dependency>
            <groupId>fish.payara.extras</groupId>
            <artifactId>ejb-http-client</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>fish.payara.samples</groupId>
            <artifactId>samples-test-utils</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>jakarta.ejb</groupId>
            <artifactId>jakarta.ejb-api</artifactId>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <id>payara-server-managed</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <version>${maven.exec.plugin.version}</version>
                        <executions>
                            <execution>
                                <id>start-payara</id>
                                <phase>initialize</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <skip>${skipServerStartStop}</skip>
                                    <executable>${payara.home}/bin/asadmin</executable>
                                    <arguments>
                                        <argument>start-domain</argument>
                                        <argument>${payara.domain.name}</argument>
                                    </arguments>
                                </configuration>
                            </execution>

                            <execution>
                                <id>stop-payara</id>
                                <phase>post-integration-test</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <skip>${skipServerStartStop}</skip>
                                    <executable>${payara.home}/bin/asadmin</executable>
                                    <arguments>
                                        <argument>stop-domain</argument>
                                        <argument>${payara.domain.name}</argument>
                                    </arguments>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>${maven.exec.plugin.version}</version>
                <executions>
                    <execution>
                        <id>setup-ejb-invoker</id>
                        <phase>pre-integration-test</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <skip>${skipConfig}</skip>
                            <executable>${payara.asadmin}</executable>
                            <arguments>
                                <argument>set-ejb-invoker-configuration</argument>
                                <argument>--enabled</argument>
                                <argument>true</argument>
                            </arguments>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
