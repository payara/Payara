  <custom-resource res-type="java.lang.String" jndi-name="message" factory-class="org.glassfish.resources.custom.factory.PrimitivesAndStringFactory" enabled="true">
     <property name="value" value="hello"/>
  </custom-resource>
  -->
</resources>
